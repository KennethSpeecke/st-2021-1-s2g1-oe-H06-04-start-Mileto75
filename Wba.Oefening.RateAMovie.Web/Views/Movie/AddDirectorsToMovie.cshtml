@model MovieAddDirectorsVm
@{
    ViewData["Title"] = "AddDirectorsToMovie";
}

<h2>Add Directors to @Model.Title</h2>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form asp-controller="Movie" asp-action="AddDirectorsToMovie" method="post">
    <div class="form-group">
        <input type="hidden" asp-for="@Model.MovieId" />
        @for (int i = 0; i < Model.Directors.Count; i++)
        {
        <div class="form-check">
            <input asp-for="@Model.Directors[i].IsSelected" class="form-check-input">
            <label class="form-check-label" for="exampleInput">
                @Model.Directors[i].Name
            </label>
            <input type="hidden" asp-for="@Model.Directors[i].Id" />
            <input type="hidden" asp-for="@Model.Directors[i].Name" />
        </div>
        }
        </div>
    <button class="btn btn-info" type="submit">Save</button>
</form>

    

